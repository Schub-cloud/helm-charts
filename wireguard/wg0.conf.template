apiVersion: v1
kind: Secret
metadata:
  name: {{ include "wireguard.fullname" . }}
  namespace: {{ include "argocd.fullname" . }}
type: Opaque
stringData:
  wg0.conf.template: |
    [Interface]
    Address = 10.0.0.1/24
    ListenPort = 51820
    PrivateKey = {{ .Values.secret.privatekey }}

    [Peer]
    PublicKey = {{ .Values.secret.publickey }}
    AllowedIPs = 0.0.0.0/0
